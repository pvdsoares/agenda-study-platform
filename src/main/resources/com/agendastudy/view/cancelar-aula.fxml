<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700" prefWidth="400" stylesheets="@../styles/cancelar-aula.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.agendastudy.controller.CancelarAulaController">

    <VBox alignment="TOP_CENTER" layoutX="20" layoutY="40" prefWidth="360" spacing="20">

        <!-- Cabeçalho -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@icons/back.png" />
                </image>
            </ImageView>
         <ImageView fitHeight="50.0" fitWidth="200.0">
            <image>
               <Image url="@../image/logo.png" />
            </image>
         </ImageView>
        </HBox>

        <!-- Informações da aula -->
        <VBox spacing="10" styleClass="card">

            <Label fx:id="labelDisciplina" styleClass="titulo-disciplina" text="Disciplina" />

            <Label fx:id="labelProfessor" styleClass="texto-info" text="Prof. nome" />
            <Label fx:id="labelDataHora" styleClass="texto-info" text="Data - horário" />
            <Label fx:id="labelDuracao" styleClass="texto-info" text="Duração da aula" />
            <Label fx:id="labelLocal" styleClass="texto-info" text="Local / Endereço" />

        </VBox>

        <!-- Botões -->
        <VBox alignment="CENTER" spacing="15">

            <Button styleClass="botao-secundario" text="Reagendar aula" />

            <Label style="-fx-font-size: 11px; -fx-text-fill: #444;" text="Menos de 24h, cancelamento sem multa" />

            <Button onAction="#handleCancelarAula" styleClass="botao-cancelar" text="Cancelar aula" />

        </VBox>

    </VBox>
</AnchorPane>
