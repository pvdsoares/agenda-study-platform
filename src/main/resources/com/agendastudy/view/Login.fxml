<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="350.0" style="-fx-background-color: #F8F9FA;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.agendastudy.LoginController">
    <children>

        <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
            <children>
                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" />
                <Label text="AgendaStudy" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <VBox alignment="CENTER" layoutY="200.0" prefHeight="400.0" prefWidth="350.0" spacing="20.0" style="-fx-background-color: #f0f0ff; -fx-border-radius: 30 30 0 0; -fx-background-radius: 30 30 0 0;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="50.0" />
            </padding>
            <children>
                <Label text="Bem-vindo!" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>

                <Label text="Já tem conta? Faça login" textFill="#555555" />
                <Button onAction="#handleLogin" prefHeight="45.0" prefWidth="250.0" style="-fx-background-color: #3498DB; -fx-background-radius: 8;" text="Login" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>

                <Label text="Novo usuário? Crie sua conta" textFill="#555555">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Label>
                <Button onAction="#handleCadastro" prefHeight="45.0" prefWidth="250.0" style="-fx-background-color: #1E8449; -fx-background-radius: 8;" text="Cadastro" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>