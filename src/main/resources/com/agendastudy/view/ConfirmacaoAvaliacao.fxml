<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>

<AnchorPane fx:id="rootPopup"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.agendastudy.controller.ConfirmacaoAvaliacaoController"
            prefWidth="280" prefHeight="200"
            stylesheets="@../styles/confirmacao_avaliacao.css"> <VBox alignment="CENTER"
                                                                            spacing="20"
                                                                            AnchorPane.topAnchor="0.0"
                                                                            AnchorPane.bottomAnchor="0.0"
                                                                            AnchorPane.leftAnchor="0.0"
                                                                            AnchorPane.rightAnchor="0.0">

    <ImageView fx:id="iconCheck"
               fitWidth="49"
               fitHeight="49">
    </ImageView>

    <Label fx:id="labelMensagem"
           text="Obrigado pela sua Avaliação!"
           wrapText="true"
           alignment="CENTER"
           maxWidth="240">
    </Label>

</VBox>

</AnchorPane>