<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="40" styleClass="tela-pre-cadastro" stylesheets="@../styles/pre-cadastro.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    
    <padding><Insets bottom="60" left="50" right="50" top="60" /></padding>
    
    <!-- Título do Sistema -->
    <Label styleClass="titulo-sistema" text="AgendaStudy" />
    
    <!-- Pergunta -->
    <VBox alignment="CENTER_LEFT" spacing="25" styleClass="selecao-tipo">
        <Label styleClass="pergunta-tipo" text="Como gostaria de se cadastrar?" />
        
        <!-- Opções de tipo de usuário -->
        <VBox spacing="15" styleClass="opcoes-tipo">
            <RadioButton styleClass="radio-opcao" text="Como estudante">
            <toggleGroup>
               <ToggleGroup fx:id="grupoTipo" />
            </toggleGroup></RadioButton>
            <RadioButton selected="true" styleClass="radio-opcao" text="Como professor" toggleGroup="$grupoTipo" />
        </VBox>
    </VBox>
    
    <!-- Separador -->
    <VBox alignment="CENTER" spacing="20" styleClass="separador-section">
        <Separator prefWidth="300" />
        <Label styleClass="texto-ou" text="ou" />
        <Separator prefWidth="300" />
    </VBox>
    
    <!-- Seção Login -->
    <VBox alignment="CENTER" spacing="15" styleClass="secao-login">
        <Label styleClass="texto-login" text="Já tem conta? Faça o login" />
        <Button onAction="#handleLogin" styleClass="btn-login" text="Login" />
    </VBox>
    
    <!-- Botão de continuar -->
    <Button onAction="#handleContinuar" styleClass="btn-continuar" text="Continuar" />
</VBox>
