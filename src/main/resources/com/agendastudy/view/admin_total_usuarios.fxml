<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.agendastudy.controller.AdminTotalUsuariosController"
            prefHeight="640.0" prefWidth="360.0"
            styleClass="admin-main-container">

    <stylesheets>
        <URL value="@admin_gerenciamento.css" />
    </stylesheets>

    <top>
        <VBox spacing="5" styleClass="admin-header-list">
            <padding>
                <Insets top="30" right="20" bottom="15" left="20" />
            </padding>
            <Label text="RESUMO DE CONTAS" styleClass="header-title-admin"/>
            <Label text="Total de Usuários Cadastrados (SCRUM-75)" styleClass="detail-label-admin"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="15" styleClass="admin-card-container">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox styleClass="report-card-total" alignment="CENTER" spacing="10">
                <Label text="TOTAL GERAL DE USUÁRIOS:" styleClass="report-label-title"/>
                <Label fx:id="totalGeralLabel" text="0" styleClass="report-label-value-total"/>
            </HBox>

            <Label text="Detalhes por Tipo:" styleClass="report-label-title-detail"/>
            
            <HBox styleClass="report-card-detail" alignment="CENTER" spacing="10">
                <Label text="Estudantes:" styleClass="report-label-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="estudantesLabel" text="0" styleClass="report-label-value-detail"/>
            </HBox>

            <HBox styleClass="report-card-detail" alignment="CENTER" spacing="10">
                <Label text="Professores:" styleClass="report-label-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="professoresLabel" text="0" styleClass="report-label-value-detail"/>
            </HBox>

            <Region VBox.vgrow="ALWAYS"/>
            <Label text="(Área para possível gráfico de pizza no futuro)" styleClass="placeholder-text-admin"/>

        </VBox>
    </center>
    
    <bottom>
        <Button text="VOLTAR PARA RELATÓRIOS" onAction="#handleVoltar" styleClass="secondary-button-admin" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </BorderPane.margin>
        </Button>
    </bottom>
</BorderPane>
